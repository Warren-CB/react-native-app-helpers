  },
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "license": "MIT",
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.20.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.0.10",
    "@types/react-test-renderer": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "del-cli": "^6.0.0",
    "eslint": "^9.20.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-n": "^17.15.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.4",
    "expo-doctor": "^1.12.7",
    "globals": "^16.0.0",
    "jest": "^29.4.0",
    "jest-expo": "^52.0.4",
    "metro-react-native-babel-preset": "^0.77.0",
    "npm-run-all": "^4.1.5",
    "react": "^19.0.0",
    "react-native": "^0.78.0",
    "react-test-renderer": "^19.0.0",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "scripts": {
    "buildClean": "del-cli \"**/*.js\" \"**/*.d.ts\" \"!**/node_modules/**/*\"",
    "buildExpoDoctor": "expo-doctor",
    "buildLint": "eslint \"**/*.ts\" \"**/*.tsx\"",
    "buildLintFix": "eslint --fix \"**/*.ts\" \"**/*.tsx\"",
    "buildTypeScript": "tsc",
    "buildJest": "jest",
    "test": "npm-run-all buildClean buildExpoDoctor buildLintFix buildTypeScript buildJest",
    "lint": "eslint ."
  },
  "files": [
    "**/index.js",
    "**/index.d.ts"
  ],
  "types": "index.d.ts",
  "sideEffects": false,
  "dependencies": {
    "events": "3.3.0",
    "expo": "^52.0.36",
    "expo-constants": "~17.0.4",
    "expo-crypto": "~14.0.2",
